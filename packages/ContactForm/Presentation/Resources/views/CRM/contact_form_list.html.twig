{% extends 'CRM/base.html.twig' %}

{% block custom_page_title %}Kontaktní formuláře{% endblock %}
{% block custom_page_subtitle %}{% endblock %}

{% block page_content %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Kontaktní formuláře</h3>
        </div>
        <div class="box-body">
            <div class="row col-md-12">
                <table class="table table-bordered table-striped" data-controller="data-table">
                    <thead>
                    <tr>
                        <th>Jméno</th>
                        <th>Email</th>
                        <th>Vytvořeno</th>
                        <th>Akce</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for form in forms %}
                        <tr role="row" class="odd">
                            <td class="sorting_1">{{ form.name }}</td>
                            <td>{{ form.email }}</td>
                            <td>{{ form.createdAt|date('d.m.Y') }}</td>
                            <td>
                                {% if is_granted(constant('Impexta\\ContactForm\\Infrastructure\\Security\\ContactFormVoter::VIEW'), form) %}
                                    <a href="{{ path('contact_form_crm_contact_form_detail', {'id': form.id}) }}"
                                       class="btn btn-primary btn-sm">Otevřít</a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
