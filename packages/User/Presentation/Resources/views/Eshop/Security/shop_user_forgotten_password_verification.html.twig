{% extends 'Eshop/base.html.twig' %}
{% import 'Eshop/components/_navigation.html.twig' as navigation %}
{% import 'Eshop/components/_footer.html.twig' as footer %}

{% block body %}
    {{ navigation.render() }}
    <main class="container">
        {{ form_start(form, { attr: { class: 'Form LoginRegistration-form' }}) }}
        <h1 class="LoginRegistration-headline">Změna hesla</h1>
        <div class="Form-inputWrapper">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, { attr: { class: 'Form-input' } }) }}
            {{ form_errors(form.email) }}
        </div>

        <button type="submit" class="Form-submit">Změnit heslo</button>

        {{ form_row(form._token) }}
        {{ form_end(form, {'render_rest': false}) }}
    </main>
    {{ footer.render() }}
{% endblock %}

