{% extends 'CRM/base.html.twig' %}

{% import '@product/CRM/product_card/product_card_macro.html.twig' as macro %}

{% block custom_title %}Upravit produktovou kartu{% endblock %}
{% block custom_page_title %}Upravit produktovou kartu {{ productCard.name }}{% endblock %}
{% block custom_page_subtitle %}{% endblock %}

{% if productCard.products | length > 0 %}
    {% set allow_remove = false %}
{% else %}
    {% set allow_remove = true %}
{% endif %}

{% block remove_path %}
    {{ path('product_crm_product_card_delete', {'id' :productCard.id}) }}
{% endblock %}

{% block back_path %}{{ path('product_crm_product_card_list') }}{% endblock %}

{% block page_content %}
    <div class="row">
        {{ form_start(form,{'attr': {'data-controller': 'form-collection'}}) }}
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Produktová karta</h3>
                </div>
                <div class="box-body box-profile">
                    <div class="form-group">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.originalCode) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.vatRate) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.guarantee) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.description) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.note) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.cars, {'attr': {'data-controller': 'select2'}}) }}
                    </div>
                </div>
            </div>

            <div class="box box-primary">
                <div class="box-body box-profile">
                    <div class="form-group">
                        {{ form_row(form.category, {'attr': {'data-controller': 'select2'}}) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <button type="submit" class="btn btn-success pull-right">Uložit</button>
        </div>
        {{ form_row(form._token) }}
        {{ form_end(form, {'render_rest': false}) }}
    </div>
{% endblock %}
