{% extends 'CRM/base.html.twig' %}

{% import '@warehouse/CRM/order/warehouse_order_macro.html.twig' as macro %}

{% block custom_page_title %}Nová objednávka{% endblock %}
{% block custom_page_subtitle %}{% endblock %}

{% block page_content %}
    {{ form_start(form,{'attr': {'data-controller': 'form-collection'}}) }}
    <div class="col-md-3">
        <div class="box box-primary table-box">
            <div class="box-header">
                <h3 class="box-title">Příjem na sklad
                </h3>
            </div>
            <div class="box-body">
                {{ form_row(form.warehouse) }}
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div data-form-collection-target = "prototypeDiv"
             data-prototype="{{ macro.printRow(form.warehouseOrderItems.vars.prototype)|e('html_attr') }}"
             data-count="{{ form.warehouseOrderItems | length }}">
        </div>
        <button type="button" class="add-row btn btn-primary"
                data-action="click->form-collection#addFormToCollection">
            Přidat
            produkt
        </button>

        <button type="submit" class="btn btn-success pull-right">Vytvořit</button>
        {{ form_row(form._token) }}
    </div>
    {{ form_end(form, {'render_rest': false}) }}
{% endblock %}
